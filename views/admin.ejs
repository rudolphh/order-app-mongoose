<html>
<head>
    <title>Admin | User: Orders</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" 
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" 
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script>

        $('document').ready(() => {

            $(":button").click(function(e) {

                let order = $(event.target).data('order');
                let email = $(event.target).data('email');
                let user = $(event.target).data('user');
                let status = $(event.target).data('status');

                e.preventDefault();
                $.ajax({
                    url: "/sendEmail",
                    type: "POST",
                    data: {
                        'order': order,
                        'email': email,
                        'user': user,
                        'status': status,
                    },
                    success: function(data){
                        console.log(data);
                        alert("Email sent successfully to " + email);
                    }
                });
            });

        });
    </script>
    <style>
        .row .col {
            margin-top: 5px; margin-bottom: 5px;
        }
        form {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .table input {
            border: 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center p-5">

            <table class="table">
                <thead>
                    <tr>
                    <th scope="col"></th>
                    <th scope="col">#</th>
                    <th scope="col">Order #</th>
                    <th scope="col">User</th>
                    <th scope="col">Address</th>
                    <th scope="col">Email</th>
                    <th scope="col">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach((order, index) => { %>
                    <tr>
                    <th scope="row">
                        <input type="button" value="send email" 
                            data-order="<%= order._id %>"
                            data-email="<%= order.email %>"
                            data-user="<%= order.userName %>"
                            data-status="<%= order.status %>" />
                    </th>
                    <td><%= order._id %> </td>
                    <td><%= index+1 %></td>
                    <td><%= order.userName %></td>
                    <td><%= order.address %> </td>
                    <td><%= order.email %> </td>
                    <td><%= order.status %> </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>

        </div>
    </div>
</body>
</html>